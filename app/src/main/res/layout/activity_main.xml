<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/biletlerim"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:background="@android:color/background_light"
        android:drawableStart="@mipmap/ticket"
        android:text="Biletlerim"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hesabim"
        app:layout_constraintStart_toEndOf="@+id/biletAl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/biletAl"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:background="@android:color/background_light"
        android:drawableStart="@mipmap/bus"
        android:text="Bilet Al"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/hesabim"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:background="@android:color/background_light"
        android:drawableStart="@mipmap/account"
        android:text="Hesabım"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.998" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="328dp"
        android:layout_height="430dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/biletlerim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btnGidis"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="376dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:foregroundTint="#FFC107"
            android:text="Gidiş"
            android:textColor="@android:color/white"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnGidisDonus"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="146dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="377dp"
            android:background="@android:color/transparent"
            android:text="Gidiş-Dönüş"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="349dp"
            android:fontFamily="@font/allerta"
            android:text="NEREDEN : "
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/spinnerNereden"
            android:layout_width="315dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="310dp"
            android:backgroundTint="?android:attr/panelBackground"
            android:contextClickable="true"
            android:cursorVisible="true"
            android:drawableEnd="@mipmap/route"
            android:hint="Kalkış Noktasını Seçiniz"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textCursorDrawable="@android:color/holo_blue_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="258dp"
            android:layout_marginBottom="281dp"
            android:fontFamily="@font/allerta"
            android:text="NEREYE : "
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/spinnerNereye"
            android:layout_width="315dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="239dp"
            android:backgroundTint="@android:color/transparent"
            android:drawableEnd="@mipmap/route"
            android:hint="Varış Noktasını Seçiniz"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="209dp"
            android:layout_marginBottom="206dp"
            android:fontFamily="@font/allerta"
            android:text="GİDİŞ TARİHİ :"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTarih"
            android:layout_width="149dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="197dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="205dp"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/tvTarih2"
            android:layout_width="158dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="269dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="136dp"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/btnTarihSec"
            android:layout_width="307dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="219dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="182dp"
            android:clickable="true"
            android:drawableEnd="@mipmap/calendar"
            android:gravity="center|left"
            android:hint="Gidiş Tarihizi Seçiniz" />



        <TextView
            android:id="@+id/btnTarihSec2"
            android:layout_width="307dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="293dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="108dp"
            android:clickable="true"
            android:drawableEnd="@mipmap/calendar"
            android:gravity="center|left"
            android:hint="Dönüş Tarihinizi Seçiniz"
            android:visibility="visible"
            android:onClick="onTouch"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/tvDonusTarihi"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="272dp"
            android:layout_marginEnd="201dp"
            android:layout_marginBottom="130dp"
            android:fontFamily="@font/allerta"
            android:text="DÖNÜŞ TARİHİ :"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnBiletAra"
            android:layout_width="235dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="363dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="29dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Bilet Ara"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="111dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        app:srcCompat="@mipmap/bkturizm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide2"
        android:text="BK TURİZM"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="21dp"
        android:fontFamily="cursive"
        android:gravity="top|left"
        android:text="Online Bilet"
        android:textColor="@android:color/holo_orange_light"
        android:textColorLink="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.236" />

</androidx.constraintlayout.widget.ConstraintLayout>